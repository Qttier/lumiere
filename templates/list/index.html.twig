{% extends 'base.html.twig' %}

{% block title %}Hello ListController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Rate</th>
				<th>Remark</th>
				<th>User</th>
			</tr>
		</thead>
		<tbody>
			{% for record in records %}
				<tr>
					<td>{{ record.name }}</td>
					<td>{{ record.rate }}
						/ 100</td>
					<td>{{ record.remark }}</td>
					<td>{{ record.owner.username }}</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
