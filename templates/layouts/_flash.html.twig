{% for type, messages in app.flashes %}
	<div class="alert alert-{{ type }} mx-4  text-center alert-dismissible fade show" role="alert">
		<button type="button" class="my-1 py-2 btn-close btn-close-white h4" data-bs-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
		{{ messages[0]|trans({}, 'flash') }}
	</div>
{% endfor %}
